                </VerticalStackLayout>
            </toolkit:Expander>

            <toolkit:Expander IsExpanded="True">
                <toolkit:Expander.Header>
                    <HorizontalStackLayout>
                        <Label Text="Unexpected Twist"
               FontAttributes="Bold"
               FontSize="Medium"
                           TextColor="#555"/>


                        <Image Source="arrow_down" HeightRequest="25"  />

                    </HorizontalStackLayout>

                </toolkit:Expander.Header>
                <VerticalStackLayout>
                    <Label Text="{Binding Item.UnexpectedTwist}"
                   Margin="20,0"
                   FontSize="16"

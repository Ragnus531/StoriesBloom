                    </HorizontalStackLayout>

                </toolkit:Expander.Header>
                <VerticalStackLayout>
                    <Label Text="{Binding Item.Chapter3}"
                   Margin="20,0"
                   FontSize="16"
                           TextColor="#666" 
                           />
                </VerticalStackLayout>
            </toolkit:Expander>

            <toolkit:Expander IsExpanded="True">
                <toolkit:Expander.Header>
                    <HorizontalStackLayout>
                        <Label Text="Chapter 4"
               FontAttributes="Bold"
               FontSize="Medium"
                           TextColor="#555"/>



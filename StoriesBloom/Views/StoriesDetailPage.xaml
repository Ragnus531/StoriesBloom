                            <Label
                                FontAttributes="Bold"
                                FontSize="Medium"
                                Text="Chapter 3"
                                TextColor="#666" />


                            <Image
                                x:Name="arrowImageChapter3"
                                Margin="3,0,0,0"
                                HeightRequest="25"
                                Source="arrow_down" />

                        </HorizontalStackLayout>

                    </toolkit:Expander.Header>
                    <VerticalStackLayout>
                        <Label
                            FontSize="16"
                            Text="{Binding Item.Chapter3}"
                            TextColor="#AAA" />
                    </VerticalStackLayout>
                </toolkit:Expander>

                <toolkit:Expander
                    x:Name="chapter4Expander"
                    Margin="0,10,0,0"
                    ExpandedChanged="Expander_ExpandedChanged"
                    IsExpanded="True">
                    <toolkit:Expander.Header>
                        <HorizontalStackLayout>
                            <Label
                                FontAttributes="Bold"
                                FontSize="Medium"
                                Text="Chapter 4"
                                TextColor="#666" />


                            <Image
                                x:Name="arrowImageChapter4"
                                Margin="3,0,0,0"
                                HeightRequest="25"
                                Source="arrow_down" />

                        </HorizontalStackLayout>

                    </toolkit:Expander.Header>
                    <VerticalStackLayout>
                        <Label
                            FontSize="16"
                            Text="{Binding Item.Chapter4}"
                            TextColor="#AAA" />
                    </VerticalStackLayout>
                </toolkit:Expander>

                <toolkit:Expander
                    x:Name="chapter5Expander"
                    Margin="0,10,0,0"
                    ExpandedChanged="Expander_ExpandedChanged"
                    IsExpanded="True">
                    <toolkit:Expander.Header>
                        <HorizontalStackLayout>
                            <Label
                                FontAttributes="Bold"
                                FontSize="Medium"
                                Text="Chapter 5"
                                TextColor="#666" />


                            <Image
                                x:Name="arrowImageChapter5"
                                Margin="3,0,0,0"
                                HeightRequest="25"
                                Source="arrow_down" />

                        </HorizontalStackLayout>

                    </toolkit:Expander.Header>
                    <VerticalStackLayout>
                        <Label
                            FontSize="16"
                            Text="{Binding Item.Chapter5}"
                            TextColor="#AAA" />
                    </VerticalStackLayout>
                </toolkit:Expander>

                <toolkit:Expander
                    x:Name="epilogueExpander"
                    Margin="0,10,0,0"
                    ExpandedChanged="Expander_ExpandedChanged"
                    IsExpanded="True">
                    <toolkit:Expander.Header>
                        <HorizontalStackLayout>
                            <Label
                                FontAttributes="Bold"
                                FontSize="Medium"
                                Text="Epilogue"
                                TextColor="#666" />


                            <Image
                                x:Name="arrowImageEpilogue"
                                Margin="3,0,0,0"
                                HeightRequest="25"
                                Source="arrow_down" />

                        </HorizontalStackLayout>

                    </toolkit:Expander.Header>
                    <VerticalStackLayout>
                        <Label
                            FontSize="16"
                            Text="{Binding Item.Epilogue}"
                            TextColor="#AAA" />
                    </VerticalStackLayout>
                </toolkit:Expander>

                <toolkit:Expander
                    x:Name="twistExpander"
                    Margin="0,10,0,0"
                    ExpandedChanged="Expander_ExpandedChanged"
                    IsExpanded="True"
                    IsVisible="{Binding Item.UnexpectedTwist.Length, Converter={local:IntToBoolConverter}}">
                    <toolkit:Expander.Header>
                        <HorizontalStackLayout>
                            <Label
                                FontAttributes="Bold"
                                FontSize="Medium"
                                Text="Unexpected Twist"
                                TextColor="#666" />


                            <Image
                                x:Name="arrowImageTwist"
                                Margin="3,0,0,0"
                                HeightRequest="25"
                                Source="arrow_down" />

                        </HorizontalStackLayout>

                    </toolkit:Expander.Header>
                    <VerticalStackLayout>
                        <Label
                            FontSize="16"
                            Text="{Binding Item.UnexpectedTwist}"
                            TextColor="#AAA" />
                    </VerticalStackLayout>
                </toolkit:Expander>
            </VerticalStackLayout>

        </Grid>

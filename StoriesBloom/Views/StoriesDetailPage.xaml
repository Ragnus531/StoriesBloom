                        <Label Text="Chapter 2"
               FontAttributes="Bold"
               FontSize="Medium"
                           TextColor="#555"/>


                        <Image Source="arrow_down" HeightRequest="25"  />

                    </HorizontalStackLayout>

                </toolkit:Expander.Header>
                <VerticalStackLayout>
                    <Label Text="{Binding Item.Chapter2}"
                   Margin="20,0"
                   FontSize="16"
                           TextColor="#666" 
                           />
                </VerticalStackLayout>
            </toolkit:Expander>

            <toolkit:Expander IsExpanded="True">
                <toolkit:Expander.Header>
                    <HorizontalStackLayout>
                        <Label Text="Chapter 3"
               FontAttributes="Bold"
               FontSize="Medium"
                           TextColor="#555"/>



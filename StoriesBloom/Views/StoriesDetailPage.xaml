                            <Label Text="Epilogue"
               FontAttributes="Bold"
               FontSize="Medium"
                           TextColor="#666"/>


                            <Image Source="arrow_down" Margin="3,0,0,0" HeightRequest="25"  />

                        </HorizontalStackLayout>

                    </toolkit:Expander.Header>
                    <VerticalStackLayout>
                        <Label Text="{Binding Item.Epilogue}"
                   FontSize="16"
                           TextColor="#AAA" 
                           />
                    </VerticalStackLayout>
                </toolkit:Expander>

                <toolkit:Expander IsExpanded="True" Margin="0,10,0,0">
                    <toolkit:Expander.Header>
                        <HorizontalStackLayout>
                            <Label Text="Unexpected Twist"
               FontAttributes="Bold"
               FontSize="Medium"
                           TextColor="#666"/>


                            <Image Source="arrow_down" Margin="3,0,0,0" HeightRequest="25"  />

                        </HorizontalStackLayout>

                    </toolkit:Expander.Header>
                    <VerticalStackLayout>
                        <Label Text="{Binding Item.UnexpectedTwist}"
                   FontSize="16"
                           TextColor="#AAA" 
                           />
                    </VerticalStackLayout>
                </toolkit:Expander>
            </VerticalStackLayout>

        </Grid>

                                WidthRequest="50" StrokeThickness="0.5" VerticalOptions="Start">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="10,10,10,10"/>
                            </Border.StrokeShape>

                            <Image Source="left_arrow_icon.png" WidthRequest="25" HeightRequest="25" HorizontalOptions="Center" 
                                   VerticalOptions="Center"/>

                            <!--<Label FontFamily="Icons" FontSize="25" HorizontalOptions="Center" Text="&#xE801;"
                                   TextColor="{StaticResource Gray400}" VerticalOptions="Center" />-->
                        </Border>

                        <Border Grid.Column="1"
                            Margin="0,35,15,0" BackgroundColor="Black" Opacity="0.80" HeightRequest="50" HorizontalOptions="End"
                                VerticalOptions="Start"
                                WidthRequest="50" StrokeThickness="0.5">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="10,10,10,10"/>
                            </Border.StrokeShape>

                            <Label FontFamily="Icons" FontSize="25" HorizontalOptions="Center" Text="&#xF097;"
                                   TextColor="{StaticResource Gray400}" VerticalOptions="Center" />
                        </Border>

                    </Grid>
                </Grid>
            </Border>

            <Grid Grid.Row="1" Grid.RowSpan="2" Padding="20">
                <Label Text="{Binding Item.Title}" TextColor="White" />
            </Grid>

